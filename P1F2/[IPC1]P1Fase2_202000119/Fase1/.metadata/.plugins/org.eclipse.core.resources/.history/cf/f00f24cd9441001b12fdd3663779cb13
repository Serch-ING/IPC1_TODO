		//Cambiar datos Admin
		public void CambioAdmin(String name,String lastname,String user,String pass){
		
			for(int i=1;i<10;i++) {
				
				if(user.equals(this.Administradores[i][3])) {
					
					name = Usuario[i][0];
					lastname = Usuario[i][1];
					user = Usuario[i][2];
					pass = Usuario[i][3];
					//Usuario actulizado con exito 
