	public void abrirventana() {
		if(this.gestor.verificar(this.username.getText(), this.password.getText())) {
			this.dispose();
			Principal p = new Principal();
						
		}else {
			
			JOptionPane.showMessageDialog(this, "Verifique sus Credenciales");
			}
	}
	
